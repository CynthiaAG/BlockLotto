<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_PendingLottery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cynthia.blocklotto.fragment.Fragment_pending_lottery"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:id="@+id/tabLottery"
        app:tabTextColor="@color/colorTertiary"
        app:tabIndicatorColor="@color/colorAccent"
        android:background="@color/white"
        android:layout_weight="0.00001"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerLottery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_circle_buton"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle_buton"
            android:backgroundTint="@android:color/transparent">

            <TextView
                android:id="@+id/balanceLotteryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="0"
                android:gravity="top"
                android:text="  SALDO ACTUAL:"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/balanceLottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
            android:gravity="left"
            android:text="5 BTC"
            android:textSize="24sp"
            android:background="@drawable/shape_circle_buton"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>




</LinearLayout>
