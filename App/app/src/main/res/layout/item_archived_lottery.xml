<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/archived_cardView"
    android:layout_width="110dp"
    android:layout_height="190dp"
    android:layout_margin="5dp"
    android:layout_marginRight="2.5dp"
    android:layout_weight="0.4"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgArchivedLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/start2" />

        <TextView
            android:id="@+id/nameArchivedLottery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:text="El Gordo Digital"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateArchivedLottery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.9"
            android:text="22/06/2020"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TicketArchived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.8"
                android:text="Boletos: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/numTicketArchived"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.8"
                android:text="5"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
