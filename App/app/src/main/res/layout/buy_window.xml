<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:rowCount="6">

        <TextView
            android:id="@+id/buyAnswer"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_rowSpan="1"
            android:focusedByDefault="true"
            android:text="¿CUÁNTOS BOLETOS DESEA COMPRAR?"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_height="2dip"
            android:layout_above="@+id/numberPicker"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_rowSpan="2"
            android:background="#012039"
            android:focusedByDefault="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginLeft="35dp"
                android:clickable="true"
                android:contextClickable="true"
                android:focusedByDefault="true" />

            <LinearLayout
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tittlePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:focusedByDefault="true"
                    android:text="Precio: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:focusedByDefault="true"
                    android:text="0.00002 B"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buyFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="45dp"
                android:layout_rowSpan="2"
                android:layout_weight="0.2"
                android:text="Comprar" />

            <Button
                android:id="@+id/cancelBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="45dp"
                android:layout_rowSpan="2"
                android:layout_weight="0.2"
                android:text="Cancelar" />
        </LinearLayout>
    </GridLayout>


</RelativeLayout>